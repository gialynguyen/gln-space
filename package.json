{
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "prettier": "~2.6.2",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.2.4"
  },
  "lint-staged": {
    "{apps,libs,packages}/**/*.{ts,tsx}": [
      "eslint --ext .ts --ext .tsx --color --max-warnings 0"
    ],
    "{apps,libs,packages}*.{css,scss}": [
      "stylelint ./src/**/*.scss --mw 0"
    ]
  }
}
